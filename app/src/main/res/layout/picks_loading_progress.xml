<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/loading_dialog_padding"
    android:background="@drawable/loading_frame"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_gravity="center"
        android:layout_width="@dimen/loading_dialog_width"
        android:layout_height="@dimen/loading_dialog_width"
        android:indeterminateDuration="800"
        android:indeterminateDrawable="@drawable/progress_draw" />

    <TextView
        android:layout_width="@dimen/loading_dialog_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/loading_dialog_text_size"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/dialog_loading_txt"/>

</LinearLayout>